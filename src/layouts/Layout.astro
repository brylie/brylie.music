---
import BaseHead from "../components/BaseHead.astro";
import NavigationMenu from "../components/NavigationMenu.astro";
import Footer from "../components/Footer.astro";
import type { ImageMetadata } from "astro";

export interface Props {
  title: string;
  description: string;
  image?: ImageMetadata;
  ogImage?: ImageMetadata;
  keywords?: string[];
  canonicalURL?: string;
  robots?: string;
  author?: string;
  pubDate?: Date;
  updatedDate?: Date;
}

const {
  title,
  description,
  image,
  ogImage,
  keywords,
  canonicalURL,
  robots,
  author,
  pubDate,
  updatedDate,
} = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <BaseHead
      title={title}
      description={description}
      image={image}
      ogImage={ogImage}
      keywords={keywords}
      canonicalURL={canonicalURL}
      robots={robots}
      author={author}
      pubDate={pubDate}
      updatedDate={updatedDate}
    />
  </head>
  <body>
    <header>
      <NavigationMenu />
    </header>
    <main>
      <slot />
    </main>
    <Footer />
  </body>
</html>

<style>
  header {
    margin: 0;
    background: white;
    box-shadow: 0 2px 8px rgba(var(--black), 5%);
  }
  main {
    width: calc(100% - 2em);
    max-width: 100%;
    margin: 0;
  }
</style>
