---
import BaseHead from "../components/BaseHead.astro";
import NavigationMenu from "../components/NavigationMenu.astro";
import Footer from "../components/Footer.astro";
import type { ImageMetadata } from "astro";

export interface Props {
  title: string;
  description: string;
  image?: ImageMetadata;
  ogImage?: ImageMetadata;
  keywords?: string[];
  canonicalURL?: string;
  robots?: string;
  author?: string;
  pubDate?: Date;
  updatedDate?: Date;
}

const {
  title,
  description,
  image,
  ogImage,
  keywords,
  canonicalURL,
  robots,
  author,
  pubDate,
  updatedDate,
} = Astro.props;
---

<!doctype html>
<html lang="en" class="dark">
  <head>
    <BaseHead
      title={title}
      description={description}
      image={image}
      ogImage={ogImage}
      keywords={keywords}
      canonicalURL={canonicalURL}
      robots={robots}
      author={author}
      pubDate={pubDate}
      updatedDate={updatedDate}
    />
  </head>
  <body class="bg-gray-950 text-gray-100 min-h-screen flex flex-col">
    <header class="bg-gray-900 border-b border-gray-800 shadow-lg">
      <NavigationMenu />
    </header>
    <main class="flex-1">
      <slot />
    </main>
    <Footer />
  </body>
</html>
