---
import { getCollection } from "astro:content";
import Layout from "../../layouts/Layout.astro";
import Breadcrumbs from "../../components/Breadcrumbs.astro";
import MediaCard from "../../components/MediaCard.astro";
import {
  generateBreadcrumbSchema,
  type BreadcrumbItem,
} from "../../utils/breadcrumbs";
import { generateCollectionPageSchema } from "../../utils/collectionSchema";

// Fetch all media, sorted by datePublished (newest first)
const media = (await getCollection("media")).sort(
  (a, b) => b.data.datePublished.valueOf() - a.data.datePublished.valueOf(),
);

const pageTitle = "Media";
const pageDescription =
  "Multimedia content including music videos, audiovisual performances, and interactive media pieces. Experience the fusion of sound, vision, and technology.";

// Generate breadcrumbs
const breadcrumbItems: BreadcrumbItem[] = [
  {
    name: "Home",
    href: new URL("/", Astro.site || Astro.url.origin).href,
  },
  {
    name: "Media",
    href: Astro.url.href,
    current: true,
  },
];

const breadcrumbSchema = generateBreadcrumbSchema(breadcrumbItems);

const collectionSchema = generateCollectionPageSchema(
  pageTitle,
  pageDescription,
  Astro.url.href,
  breadcrumbSchema,
  media,
  (Astro.site || Astro.url.origin).toString(),
  "media",
);
---

<Layout
  title={pageTitle}
  description={pageDescription}
  structuredData={collectionSchema}
>
  <div class="max-w-6xl mx-auto px-4 py-12">
    <Breadcrumbs items={breadcrumbItems} />

    <header class="text-center mb-12">
      <h1 class="text-4xl md:text-5xl font-bold text-white mb-4">Media</h1>
      <p class="text-xl text-gray-300 max-w-3xl mx-auto">
        Explore multimedia works that combine music, visuals, and interactive
        elements. From live performance recordings to generative audiovisual
        experiences.
      </p>
    </header>

    {
      media.length === 0 ? (
        <div class="text-center py-12">
          <p class="text-gray-400 text-lg">No media found.</p>
        </div>
      ) : (
        <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6">
          {media.map((item) => (
            <MediaCard media={item} />
          ))}
        </div>
      )
    }

    <div class="mt-12 text-center">
      <div class="bg-gray-900 rounded-lg p-6 max-w-3xl mx-auto">
        <p class="text-lg text-blue-300 mb-2">ðŸ“œ Creative Commons</p>
        <p class="text-gray-300">
          All media content is released under Creative Commons licenses,
          allowing you to share, remix, and build upon these works with proper
          attribution. Each piece includes specific licensing details.
        </p>
      </div>
    </div>
  </div>
</Layout>
