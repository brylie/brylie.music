---
import FormattedDate from "./FormattedDate.astro";
import LicenseBadge from "./LicenseBadge.astro";
import type { CollectionEntry } from "astro:content";
import { safeJsonLdString } from "../utils/seo";
import { generateMediaSchema } from "../utils/mediaSchema";

interface Props {
  media: CollectionEntry<"media">;
}

const { media } = Astro.props;
const { data } = media;

// Get media type badge colors
const getMediaTypeBadgeClasses = (mediaType: string) => {
  switch (mediaType) {
    case "video":
      return "bg-purple-500/20 text-purple-300 border border-purple-500/50";
    case "audio":
      return "bg-blue-500/20 text-blue-300 border border-blue-500/50";
    case "interactive":
      return "bg-green-500/20 text-green-300 border border-green-500/50";
    default:
      return "bg-gray-500/20 text-gray-300 border border-gray-500/50";
  }
};

// Generate thumbnail URL
let thumbnailUrl: string | undefined;
let thumbnailAlt = `${data.title} thumbnail`;

if (data.coverImage) {
  // Use provided cover image
  thumbnailUrl = data.coverImage.src;
} else if (data.youtubeId) {
  // Generate YouTube thumbnail
  thumbnailUrl = `https://img.youtube.com/vi/${data.youtubeId}/maxresdefault.jpg`;
  thumbnailAlt = `${data.title} video thumbnail`;
} else if (data.iaIdentifier) {
  // Generate Internet Archive thumbnail - use download URL for better quality/sizing
  thumbnailUrl = `https://archive.org/download/${data.iaIdentifier}/__ia_thumb.jpg`;
}

// Generate schema.org JSON-LD
const mediaUrl = new URL(
  `/media/${media.id}`,
  Astro.site || Astro.url.origin,
).toString();
const schemaOrg = generateMediaSchema(
  media,
  mediaUrl,
  (Astro.site || Astro.url.origin).toString(),
);
---

<article
  class="bg-gray-800 rounded-lg overflow-hidden hover:shadow-xl transition-shadow"
  itemscope
  itemtype={`https://schema.org/${schemaOrg["@type"]}`}
>
  <script type="application/ld+json" set:html={safeJsonLdString(schemaOrg)} />

  <a href={`/media/${media.id}/`}>
    <div class="relative aspect-video overflow-hidden bg-gray-900">
      {
        thumbnailUrl ? (
          <img
            src={thumbnailUrl}
            alt={thumbnailAlt}
            class="w-full h-full object-cover hover:scale-105 transition-transform duration-300 min-h-full min-w-full"
            itemprop="thumbnailUrl"
            loading="lazy"
          />
        ) : (
          <div class="w-full h-full flex items-center justify-center bg-gradient-to-br from-gray-800 to-gray-900">
            <div class="text-center">
              <div class="text-6xl mb-2">
                {data.mediaType === "video" && "ðŸŽ¬"}
                {data.mediaType === "audio" && "ðŸŽµ"}
                {data.mediaType === "interactive" && "âœ¨"}
              </div>
              <p class="text-gray-500 text-sm">{data.mediaType}</p>
            </div>
          </div>
        )
      }
      <div class="absolute top-3 right-3">
        <span
          class={`px-3 py-1 text-xs font-semibold rounded-full backdrop-blur-sm ${getMediaTypeBadgeClasses(data.mediaType)}`}
        >
          {data.mediaType}
        </span>
      </div>
    </div>
  </a>

  <div class="p-6">
    <h3 class="text-xl font-semibold text-blue-300 mb-2" itemprop="name">
      <a
        href={`/media/${media.id}/`}
        class="hover:text-blue-200 transition-colors"
        itemprop="url"
      >
        {data.title}
      </a>
    </h3>

    <div class="flex items-center gap-3 text-gray-400 text-sm mb-3">
      <FormattedDate date={data.datePublished} />
      {data.duration && <span>â€¢ {data.duration}</span>}
    </div>

    <p class="text-gray-200 mb-4" itemprop="description">
      {data.description}
    </p>

    {
      data.topics && data.topics.length > 0 && (
        <div class="flex flex-wrap gap-2 mb-4">
          {data.topics.map((topic) => (
            <span class="text-xs px-2 py-1 bg-gray-700 text-gray-300 rounded">
              {topic}
            </span>
          ))}
        </div>
      )
    }

    <div class="flex items-center justify-between">
      <LicenseBadge license={data.license} size={18} />

      {
        data.author && (
          <span class="text-sm text-gray-400" itemprop="author">
            {data.author}
          </span>
        )
      }
    </div>
  </div>

  <meta itemprop="datePublished" content={data.datePublished.toISOString()} />
  {
    data.dateModified && (
      <meta itemprop="dateModified" content={data.dateModified.toISOString()} />
    )
  }
  {
    data.keywords && (
      <meta itemprop="keywords" content={data.keywords.join(", ")} />
    )
  }
</article>
